<odoo>
    <data>
        <!-- Heredar la vista del informe -->
        <record id="report_saleorder_document_inherit" model="ir.ui.view">
            <field name="name">sale.order.document.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.report_saleorder_document" />
            <field name="arch" type="xml">
                <!-- Agregar tu nueva secciÃ³n dentro del div con id 'informations' -->
                <xpath expr="//div[@id='informations']" position="inside">
                    <div t-if="doc.list_contact" class="col-auto col-3 mw-100 mb-2" name="informations_list_contact">
                        <strong>Attention:</strong>
                        <p class="m-0" t-field="doc.list_contact.name"/>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Heredar el informe PDF -->
        <record id="report_saleorder_inherit" model="ir.actions.report">
            <field name="name">Sale Order - Custom</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sale.report_saleorder_document</field>
            <field name="report_file">sale.report_saleorder_document</field>
            <field name="print_report_name">Sale Order</field>
            <field name="report_barcode">True</field>
            <field name="binding_model_id" ref="sale.model_sale_order" />
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>